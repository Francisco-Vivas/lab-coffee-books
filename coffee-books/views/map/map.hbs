<div id='map' style='width: 100%; height: 600px;'></div>
<script>
  mapboxgl.accessToken = '{{token}}';
  var map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/mapbox/streets-v11',
    zoom: 13,
    center: [-99.1622182, 19.4211955]
  });
</script>